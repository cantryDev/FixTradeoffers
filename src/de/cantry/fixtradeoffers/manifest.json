{
  "manifest_version": 3,
  "name": "FixTradeoffers",
  "description": "This extension fixes the tradeoffers with the help of your apikey",
  "version": "1.0.3",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://steamcommunity.com/*/tradeoffers/",
    "*://api.steampowered.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://steamcommunity.com/*/tradeoffers/",
        "*://steamcommunity.com/*/tradeoffers"
      ],
      "js": [
        "js/TradeOffersInjector.js"
      ],
      "run_at": "document_start"
    }
  ]
}